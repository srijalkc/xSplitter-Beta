<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter shares "
        android:textColor="@color/colorToolbarHead"
        android:textSize="16sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_split_unequal"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="15dp"
        android:layout_below="@+id/tv_popup_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/rv_split_unequal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Total: "
            android:textColor="@color/colorToolbarHead"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_total_unequal_split"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorToolbarHead"
            android:text="total_amt"
            />

    </LinearLayout>
</RelativeLayout>