<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_add_group"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_add_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view_add_friend"
                android:layout_width="36dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/add_user" />

            <EditText
                android:id="@+id/text_view_friend_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/transaction_text_box"
                android:hint="@string/friend_name"
                android:inputType="text"
                android:layout_toEndOf="@+id/image_view_add_friend"
                android:textColor="@color/Aqua"
                android:textColorHint="@color/colorInsideHint"
                android:textSize="16sp"
                android:padding="5dp"/>

            <ImageButton
                android:id="@+id/btn_del_friend"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_toEndOf="@+id/text_view_friend_name"
                android:background="@color/colorPrimary"
                app:srcCompat="@drawable/trash"
                android:onClick="onTrash"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>