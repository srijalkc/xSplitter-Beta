<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorInsideBackground"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_add_group_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_group"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_add_group_toolbar"
            app:layout_constraintVertical_bias="0.07"
            app:layout_constraintHorizontal_bias="0.5">

            <RelativeLayout
                android:id="@+id/layout_add_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/image_view_add_friend"
                    android:layout_width="36dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/add_group" />

                <EditText
                    android:id="@+id/text_view_friend_name"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:background="@drawable/transaction_text_box"
                    android:hint="@string/friend_name"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/Aqua"
                    android:textColorHint="@color/colorInsideHint"
                    android:textSize="16sp" />

            </RelativeLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>