<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="385dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/event_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="15dp">

        <TextView
            android:id="@+id/transac_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/date"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/btn_edit_transac"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            app:srcCompat="@drawable/option"/>

        <TextView
            android:id="@+id/transac_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transac_date"
            android:text="Transaction name"
            android:textColor="@color/item_fill"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/transac_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transac_name"
            android:text="$123"
            android:textStyle="bold"
            android:textColor="@color/Aqua"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/transac_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transac_money"
            android:text="@string/members"
            android:textColor="@color/item_fill"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/transac_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:paddingBottom="2dp"
            android:background="@drawable/category"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>