<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">
    <RelativeLayout
        android:id="@+id/ll_search_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="roshan posakya"
            android:id="@+id/search_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />
        <TextView
            android:text="roshanposakya07@gmail.com"
            android:id="@+id/search_email"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/chk_select_friend"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/search_uname"/>
        <CheckBox

            android:id="@+id/cb_select_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>