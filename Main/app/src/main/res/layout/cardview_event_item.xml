<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="130dp"
    android:layout_margin="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/event_part"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/Aqua"
            android:padding="8dp">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event name"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/btn_edit_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/event_name"
                android:background="@drawable/edit_btn"/>

            <TextView
                android:id="@+id/event_settle_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not settled/Settled"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/event_name"/>

            <TextView
                android:id="@+id/event_to_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To pay"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:layout_below="@+id/event_settle_status"/>

            <TextView
                android:id="@+id/event_to_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Recieve"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:layout_below="@+id/event_settle_status"
                android:layout_toEndOf="@+id/event_to_pay"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_transaction_part"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/event_part">

            <TextView
                android:id="@+id/tv_event_add_transaction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/add_transaction"
                android:layout_margin="10dp"
                android:textColor="@color/Aqua"
                />

            <ImageButton
                android:id="@+id/btn_event_add_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/next_arrow"
                android:layout_toEndOf="@+id/tv_event_add_transaction"
                android:layout_marginStart="160dp"
                android:layout_marginTop="12dp"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>